  <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <div class="col-md-6" ID="available">
          <h3>Available Burgers!</h3>
          <ul class="list-unstyled">
            {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
              {{/unless}}
            {{/each}}
          </ul>

        </div>
  
        <div class="col-md-6" ID="devoured">
          <h3>Burgers you've DEVOURED!</h3>
          <ul class="list-unstyled">
              {{#each burgers}}
                {{#if devoured}}
                  {{> burgers/burger-block devoured=false}}
                {{/if}}
              {{/each}}
            </ul>
        </div>
